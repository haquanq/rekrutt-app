{
    "name": "server",
    "root": "apps/server",
    "sourceRoot": "apps/server/src",
    "projectType": "application",
    "targets": {
        "dev": {
            "executor": "nx:run-commands",
            "options": {
                "commands": ["php artisan serve", "php artisan schedule:work"],
                "cwd": "apps/server"
            }
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "command": "php artisan test",
                "cwd": "apps/server"
            }
        },
        "db:migrate": {
            "executor": "nx:run-commands",
            "options": {
                "command": "php artisan migrate:fresh",
                "cwd": "apps/server"
            }
        },
        "db:migrate-seed": {
            "executor": "nx:run-commands",
            "options": {
                "command": "php artisan migrate:fresh --seed",
                "cwd": "apps/server"
            }
        }
    },
    "tags": ["laravel", "backend"]
}
